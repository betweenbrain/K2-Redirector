<?xml version="1.0" encoding="utf-8"?>
<install version="2.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - K2 Redirector</name>
	<author>Matt Thomas</author>
	<creationDate>October 28, 2013</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0</license>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>0.1</version>
	<description>PLG_SYSTEM_K2_REDIRECTOR_DESC</description>

	<files>
		<filename plugin="k2redirector">k2redirector.php</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_system_k2redirector.ini</language>
		<language tag="en-GB">en-GB.plg_system_k2redirector.sys.ini</language>
	</languages>

	<params addpath="/administrator/components/com_k2/elements">
		<param name="categoryRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_CATEGORY_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="userRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_USER_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="tagRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_TAG_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="searchRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_SEARCH_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="dateRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_DATE_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="itemRedirect"
		       type="menuitem"
		       default=""
		       label="PLG_SYSTEM_K2_REDIRECTOR_ITEM_VIEW_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
		<param name="categories"
		       type="categoriesmultiple"
		       default="0"
		       label="PLG_SYSTEM_K2_REDIRECTOR_CATEGORIES_LABEL"
		       description="PLG_SYSTEM_K2_REDIRECTOR_CATEGORIES_DESC" />
	</params>

	<config>
		<fields name="params" addpath="/administrator/components/com_k2/elements">
			<fieldset name="basic">
				<field name="categoryRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_CATEGORY_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC">
					<option value="">PLG_SYSTEM_K2_REDIRECTOR_NOT_REDIRECTED</option>
				</field>
				<field name="userRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_USER_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC">
					<option value="">PLG_SYSTEM_K2_REDIRECTOR_NOT_REDIRECTED</option>
				</field>
				<field name="tagRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_TAG_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC">
					<option value="">PLG_SYSTEM_K2_REDIRECTOR_NOT_REDIRECTED</option>
				</field>
				<field name="searchRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_SEARCH_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC">
					<option value="">PLG_SYSTEM_K2_REDIRECTOR_NOT_REDIRECTED</option>
				</field>
				<field name="dateRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_DATE_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC">
					<option value="">PLG_SYSTEM_K2_REDIRECTOR_NOT_REDIRECTED</option>
				</field>
				<field name="itemRedirect"
				       type="menuitem"
				       default=""
				       label="PLG_SYSTEM_K2_REDIRECTOR_ITEM_VIEW_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_SELECT_DESC" />
				<field name="categories"
				       type="categoriesmultiple"
				       default="0"
				       label="PLG_SYSTEM_K2_REDIRECTOR_CATEGORIES_LABEL"
				       description="PLG_SYSTEM_K2_REDIRECTOR_CATEGORIES_DESC" />
			</fieldset>
		</fields>
	</config>


</install>
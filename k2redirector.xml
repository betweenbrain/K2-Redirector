<?xml version="1.0" encoding="utf-8"?>
<install version="2.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - K2 Redirector</name>
	<author>Matt Thomas</author>
	<creationDate>October 28, 2013</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0</license>
	<authorEmail></authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>0.1</version>
	<description></description>

	<files>
		<filename plugin="k2redirector">k2redirector.php</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_system_k2redirector.ini</language>
	</languages>

	<params>
		<param name="categoryRedirect"
		       type="menuitem"
		       default=""
		       label="Select category redirect"
		       description=""/>
		<param name="userRedirect"
		       type="menuitem"
		       default=""
		       label="Select user redirect"
		       description=""/>
		<param name="tagRedirect"
		       type="menuitem"
		       default=""
		       label="Select tag redirect "
		       description=""/>
		<param name="searchRedirect"
		       type="menuitem"
		       default=""
		       label="Select search redirect"
		       description=""/>
		<param name="dateRedirect"
		       type="menuitem"
		       default=""
		       label="Select date redirect"
		       description=""/>
	</params>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="categoryRedirect"
				       type="menuitem"
				       default=""
				       label="Select a menu item"
				       description="Select a menu item"/>
				<field name="userRedirect"
				       type="menuitem"
				       default=""
				       label="Select a menu item"
				       description="Select a menu item"/>
				<field name="tagRedirect"
				       type="menuitem"
				       default=""
				       label="Select a menu item"
				       description="Select a menu item"/>
				<field name="searchRedirect"
				       type="menuitem"
				       default=""
				       label="Select a menu item"
				       description="Select a menu item"/>
				<field name="dateRedirect"
				       type="menuitem"
				       default=""
				       label="Select a menu item"
				       description="Select a menu item"/>
			</fieldset>
		</fields>
	</config>

</install>